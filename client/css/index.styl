
@import './buttons.styl'
@import './header.styl'
@import './components/navbar.styl'

html,
body
  width: 100%
  height: 100%


body#app
  font-family: 'Roboto', 'Helvetica Neue', sans-serif
  background: #fff
  webkit-tap-highlight-color: #222

  hr
    max-width: 50px
    border-color: #f05f40
    border-width: 3px
    &.light
      border-color: #fff


  a
    color: #f05f40
    -webkit-transition: all .35s
    -moz-transition: all .35s
    transition: all .35s

    &:hover,
    &:focus
      color: #eb3812


  p
    margin-bottom: 20px
    font-size: 16px
    line-height: 1.5


  .bg-primary
    background-color: #f05f40


  .bg-dark
    color: #fff
    background-color: #222


  section
    padding: 100px 0


  aside
    padding: 50px 0


  .call-to-action h2
    margin: 0 auto 20px


  .text-primary
    color: #f05f40


  .no-gutter > [class*=col-]
    padding-right: 0
    padding-left: 0


  .no-padding
    padding: 0


  .text-faded
    color: rgba(255,255,255,.7)


  ::-moz-selection
    text-shadow: none
    color: #fff
    background: #222


  ::selection
    text-shadow: none
    color: #fff
    background: #222


  img::selection
    color: #fff
    background: 0 0


  img::-moz-selection
    color: #fff
    background: 0 0


  #react-view, #app-view, .holds-max-height
    min-height: 100%
    height: 1px
